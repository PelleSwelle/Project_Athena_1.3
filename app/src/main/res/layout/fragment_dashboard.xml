<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="16dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/profilePic"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/icon_user"
            app:layout_constraintBottom_toTopOf="@+id/guideline2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/CircleImageView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView android:id="@+id/tv_username"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="@string/usernamePlaceholder"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/resourcesLinear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:src="@drawable/resource_math"/>

                <TextView android:id="@+id/tv_mathPoints"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:src="@drawable/resource_literacy"/>

                <TextView android:id="@+id/tv_literacyPoints"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:src="@drawable/resource_coin"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/resourceAmountPlaceholder" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:src="@drawable/resource_potion" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/resourceAmountPlaceholder" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/positiveColor" />

    <TextView
        android:id="@+id/textView"
        android:text="@string/goals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/positiveColor"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Math"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- Do one math" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- Do two math" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subject"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- module 2; lesson 3" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- module 2; lesson 4" />
    </LinearLayout>
    <View
        android:id="@id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/positiveColor" />

    <!--    this is going to be a recyclerView when populating programmatically -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:text="@string/recentActivities"
        android:textSize="18sp"
        android:textColor="@color/positiveColor"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="127dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#D7D8D8"
            android:clickable="true"
            android:drawableRight="@drawable/icon_rightarrow"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center_vertical"
            android:text="Percentages - Substitution into algebraic expressions" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#868787"
            android:clickable="true"
            android:drawableRight="@drawable/icon_rightarrow"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center_vertical"
            android:text="Percentages - Directed numbers: addition and subtraction" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#D7D8D8"
            android:clickable="true"
            android:drawableRight="@drawable/icon_rightarrow"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center_vertical"
            android:text="Algebraic expressions - Expanding and simplifying algebraic expressions" />
    </LinearLayout>

    <View
        android:id="@id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/positiveColor" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/latest_achievements"
        android:textSize="18sp"
        android:textColor="@color/positiveColor"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/achiement1WithTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="126dp"
                android:layout_height="100dp"
                android:src="@drawable/icon_achievement" />

            <TextView
                android:layout_width="126dp"
                android:layout_height="wrap_content"
                android:text="@string/achievementNamePlaceholder"
                android:layout_gravity="center"
                android:gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/achiement2WithTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="126dp"
                android:layout_height="100dp"
                android:src="@drawable/icon_achievement" />

            <TextView
                android:layout_width="126dp"
                android:layout_height="wrap_content"
                android:text="@string/achievementNamePlaceholder"
                android:layout_gravity="center"
                android:gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/achiement3WithTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="126dp"
                android:layout_height="100dp"
                android:src="@drawable/icon_achievement" />

            <TextView
                android:layout_width="126dp"
                android:layout_height="wrap_content"
                android:text="@string/achievementNamePlaceholder"
                android:layout_gravity="center"
                android:gravity="center_horizontal" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>