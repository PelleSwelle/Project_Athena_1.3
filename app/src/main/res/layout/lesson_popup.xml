<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="313dp"
    android:layout_height="456dp"
    android:orientation="vertical"
    tools:context="ui.FragmentLessons"
    android:background="@drawable/backgorund_pargment">

    <LinearLayout
        android:layout_width="286dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_lessonTitle"
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="THIS IS LESSON TITLE"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <ImageView android:id="@+id/iv_cross"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_cross" />

    </LinearLayout>

    <TextView android:id="@+id/tv_lessonDescription"
        android:layout_width="250dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="@string/lorem_ipsum"
        android:layout_alignEnd="@id/tv_lessonTitle"
        android:layout_alignRight="@id/tv_lessonTitle" />

    <ListView
        android:id="@+id/lv_materials"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp">


    </ListView>

</LinearLayout>