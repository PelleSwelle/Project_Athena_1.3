<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.FragmentSettings"
    android:orientation="horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        tools:visibility="visible">

        <Button
            android:text="Profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profile_button"
            app:backgroundTint="@color/coastalFog" />

        <Button
            android:text="Grade and Language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/gradeandlanguage_button"
            app:backgroundTint="@color/coastalFog" />

        <Button
            android:text="Visuals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/visuals_button"
            app:backgroundTint="@color/coastalFog" />

        <Button
            android:text="Support"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/support_button"
            app:backgroundTint="@color/coastalFog" />

        <Button
            android:text="About"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/about_button"
            app:backgroundTint="@color/coastalFog" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:id="@+id/profile_settings">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="300dp">

            <TextView
                android:text="Username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_userNameHeader" />

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="[USERNAME]" />


            <TextView
                android:text="@string/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_mailHeader" />

            <TextView
                android:id="@+id/tv_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="[EMAIL]" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/coastalFog" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="133dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    tools:srcCompat="@drawable/icon_user"
                    android:id="@+id/imageView4"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp" />

                <Button
                    android:text="Change Image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button10"
                    android:layout_weight="1"
                    app:backgroundTint="@color/coastalFog"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="0dp" />
            </LinearLayout>

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/coastalFog" />

            <TextView
                android:text="@string/prompt_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView4" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="@string/passwordPlaceholder"
                android:ems="10"
                android:id="@+id/editTextTextPersonName3" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/grade_and_language_settings"
        android:visibility="gone">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteY="225dp"
            tools:layout_editor_absoluteX="145dp">

            <TextView
                android:text="@string/languages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView5" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="213dp">

                <Button
                    android:text="@string/english"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button11"
                    app:backgroundTint="@color/coastalFog" />

                <Button
                    android:text="@string/arabic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button12"
                    app:backgroundTint="@color/coastalFog" />

                <Button
                    android:text="@string/greek"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button13"
                    app:backgroundTint="@color/coastalFog" />

                <Button
                    android:text="@string/turkish"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button14"
                    app:backgroundTint="@color/coastalFog" />
            </LinearLayout>

            <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/coastalFog" />

            <TextView
                android:text="Grades"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView10" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:text="@string/grade7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button15"
                    app:backgroundTint="@color/coastalFog" />

                <Button
                    android:text="@string/grade8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button16"
                    app:backgroundTint="@color/coastalFog" />

                <Button
                    android:text="@string/grade9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button17"
                    app:backgroundTint="@color/coastalFog" />

                <Button
                    android:text="@string/grade10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button18"
                    app:backgroundTint="@color/coastalFog" />

                <Button
                    android:text="@string/grade11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button19"
                    app:backgroundTint="@color/coastalFog" />

                <Button
                    android:text="@string/grade12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button20"
                    app:backgroundTint="@color/coastalFog" />
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/visuals_settings"
        android:visibility="gone">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteY="280dp"
            tools:layout_editor_absoluteX="127dp"
            tools:visibility="visible">

            <TextView
                android:text="Text Size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView11" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Set Text Size"
                android:ems="10"
                android:id="@+id/editTextTextPersonName4" />

            <TextView
                android:text="Choose Light or Dark Theme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView12" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:text="Light Theme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button21"
                    android:layout_weight="1"
                    app:backgroundTint="@color/coastalFog" />

                <Button
                    android:text="Dark Theme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button22"
                    android:layout_weight="1"
                    app:backgroundTint="@color/coastalFog" />
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

