<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ui.achievements.AchievementsFragment"
    android:orientation="vertical">

    <TextView
        android:text="Most Recent Achievements"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
    />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="168dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="136dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="148dp"
                app:srcCompat="@drawable/achievement_cropped"
                android:id="@+id/imageView9"
            />

            <TextView
                android:text="@string/achievementNamePlaceholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:gravity="center_horizontal"
            />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="136dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="148dp"
                app:srcCompat="@drawable/achievement_cropped"
                android:id="@+id/imageView8"
            />

            <TextView
                android:text="@string/achievementNamePlaceholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:gravity="center_horizontal"
            />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="140dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="148dp"
                app:srcCompat="@drawable/achievement_cropped"
                android:id="@+id/imageView7"
            />

            <TextView
                android:text="@string/achievementNamePlaceholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:gravity="center_horizontal"
            />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/positiveColor"
    />

    <TextView
        android:text="All Achievements"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
    />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="346dp"
            android:layout_gravity="center_vertical">

            <Button
                android:text="@string/mathematics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/b_math"
            />

            <Button
                android:text="@string/literacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/b_literacy"
            />

            <Button
                android:text="@string/arabic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button23"
            />

            <Button
                android:text="Chemistry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button24"
            />

            <Button
                android:text="Physics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button25"
            />

            <Button
                android:text="biology"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button26"
            />

            <Button
                android:text="History"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button27"
            />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/literacyConstraint"
            android:layout_width="wrap_content"
            android:layout_height="564dp">

            <ImageView
                android:id="@+id/iv_literacyTree"
                android:layout_width="407dp"
                android:layout_height="417dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/literacy_course_2"
            />

            <LinearLayout
                android:layout_width="101dp"
                android:layout_height="74dp"
                android:layout_marginTop="100dp"
                android:layout_marginEnd="104dp"
                android:layout_marginRight="104dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="[module_name]"
                />

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mathTree"
            android:layout_width="358dp"
            android:layout_height="562dp">

            <ImageView
                android:id="@+id/iv_mathTree"
                android:layout_width="413dp"
                android:layout_height="422dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/math_course_2"
            />

            <LinearLayout
                android:layout_width="104dp"
                android:layout_height="63dp"
                android:layout_marginTop="124dp"
                android:layout_marginEnd="100dp"
                android:layout_marginRight="100dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="[module_name]"
                />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="43dp"
                    android:layout_height="wrap_content"
                    android:text="Button"
                />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>


</LinearLayout>