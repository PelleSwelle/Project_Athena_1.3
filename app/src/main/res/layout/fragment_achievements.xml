<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.FragmentAchievements"
    android:orientation="vertical">

    <TextView android:id="@+id/tv_recentAchievements"
              android:text="@string/latest_achievements"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textStyle="bold" android:textSize="18sp" android:textColor="@color/iconYellow"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_gravity="clip_horizontal">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    app:srcCompat="@drawable/icon_achievement"
                    android:id="@+id/imageView9"/>

            <TextView
                    android:text="@string/achievementNamePlaceholder"
                    android:layout_width="106dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8"
                    android:gravity="center_horizontal"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    app:srcCompat="@drawable/icon_achievement"
                    android:id="@+id/imageView8"/>

            <TextView
                    android:text="@string/achievementNamePlaceholder"
                    android:layout_width="106dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    android:gravity="center_horizontal"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:gravity="left">

            <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    app:srcCompat="@drawable/icon_achievement"
                    android:id="@+id/imageView7"/>

            <TextView
                    android:text="@string/achievementNamePlaceholder"
                    android:layout_width="114dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    android:gravity="center_horizontal"/>
        </LinearLayout>
    </LinearLayout>

    <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/iconYellow"/>

    <TextView
            android:text="@string/all_achievements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView9" android:textStyle="bold" android:textSize="18sp"
            android:textColor="@color/iconYellow"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                tools:visibility="visible">

            <Button
                    android:text="@string/mathematics"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_math" android:textSize="10sp" app:backgroundTint="@color/iconYellow"/>

            <Button
                    android:text="@string/literacy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_literacy" android:textSize="10sp" app:backgroundTint="@color/iconYellow"/>

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/literacyConstraint"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:visibility="gone">

            <ImageView
                    android:id="@+id/iv_literacyTree"
                    android:layout_width="288dp"
                    android:layout_height="532dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/background_literacytree"
                    app:layout_constraintVertical_bias="0.692" app:layout_constraintHorizontal_bias="0.0"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="114dp"
                    android:layout_height="81dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginEnd="56dp"
                    android:layout_marginRight="56dp"
                    android:layout_marginTop="13dp">

                <TextView
                        android:text="[module_name]"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView13"/>

                <ImageButton
                        android:src="@drawable/building_agora"
                        android:layout_width="60dp"
                        android:layout_height="62dp"
                        android:id="@+id/imageButton"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"/>

            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:orientation="vertical"
                    android:layout_width="199dp"
                    android:layout_height="294dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/ach1"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_literacyTree"
                    app:layout_constraintVertical_bias="0.0"
                    app:layout_constraintHorizontal_bias="0.21">

                <ImageView
                        android:src="@drawable/achievement_firstlesson"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/imageView6"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="16dp"/>

                <ImageButton
                        android:src="@drawable/icon_cross"
                        android:layout_width="35dp"
                        android:layout_height="39dp"
                        android:id="@+id/imageButton2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="28dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:layout_marginEnd="4dp"
                        android:layout_marginRight="4dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/mathTree"
                android:layout_width="358dp"
                android:layout_height="562dp" android:visibility="visible">

            <ImageView
                    android:id="@+id/iv_mathTree"
                    android:layout_width="296dp"
                    android:layout_height="524dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/background_mathtree" app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintVertical_bias="0.578"/>
            <LinearLayout
                    android:layout_width="106dp"
                    android:layout_height="84dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginEnd="136dp"
                    android:layout_marginRight="136dp"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                <TextView
                        android:id="@+id/textView14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="[module_name]"/>

                <Button
                        android:id="@+id/button5"
                        android:layout_width="58dp"
                        android:layout_height="wrap_content"
                        android:text="Button" app:backgroundTint="@color/iconYellow"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>


</LinearLayout>